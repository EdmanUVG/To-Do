<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="budget"
            type="com.example.walletsaver.database.Budget" />
        <variable
            name="clickListener"
            type="com.example.walletsaver.ui.home.BudgetClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/budget_item"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/budget_list_background"
        android:onClick="@{() -> clickListener.onClick(budget)}">

        <TextView
            android:id="@+id/budget_category_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto"
            android:text="@{budget.category}"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toEndOf="@+id/budget_category_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/budget_amount_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="5dp"
            android:text="@{@string/text_amount(budget.amount)}"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toStartOf="@id/text_GTQ"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/budget_category_image"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typeImage="@{budget.iconIndex}" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:max="@{Integer.parseInt(budget.amount)}"
            android:progress="@{Integer.parseInt(budget.expense)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/budget_category_image" />

        <TextView
            android:id="@+id/budget_expense_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="5dp"
            android:text="@{@string/text_amount(budget.expense)}"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toStartOf="@+id/text_slash"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_expense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:text="@string/text_expenses"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toStartOf="@+id/budget_expense_text"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_GTQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="GTQ"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_slash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="5dp"
            android:text="/"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toStartOf="@id/budget_amount_text"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>


